<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/layout"
              android:layout_height="match_parent" android:background="@drawable/dots_level_background" android:weightSum="1">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:text="ИГРА"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/holo_orange_dark"
                android:singleLine="false"
                android:layout_margin="2dp"
                android:gravity="center"
                android:id="@+id/timeTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/holo_orange_dark"
                android:singleLine="false"
                android:layout_margin="2dp"
                android:gravity="center"
                android:id="@+id/levelTextView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/holo_orange_dark"
                android:singleLine="false"
                android:layout_margin="2dp"
                android:gravity="center"
                android:id="@+id/scoreTextView"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="400sp" android:layout_gravity="top|left|right"/>

    <Button
            android:layout_width="150sp"
            android:layout_height="50dp"
            android:id="@+id/startButton"
            android:layout_gravity="center_horizontal"
            android:text="Начать игру" android:background="#ff9631ff"/>
</LinearLayout>